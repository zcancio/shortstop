<Alloy>
	<Button title="Open Blue Window" onClick="openBlueWindow">
</Alloy>

<Alloy>
    <!-- Anddroid Window -->
	<Window id="index" platform="android">
		<!-- <Require src="win1content"/>  -->
		<View id="mapview" ns="Ti.Map" onClick="doClick" onComplete="setRegion"
		            animate="true" regionFit="true" userLocation="true"
		            mapType="Ti.Map.STANDARD_TYPE" >
		
		            <Annotation id="mountainView"
		              latitude="37.390749" longitude="-122.081651"
		              title="Appcelerator Headquarters" subtitle="Mountain View, CA"
		              pincolor="Titanium.Map.ANNOTATION_RED"
		              leftButton="/images/appcelerator_small.png"
		              myid="1"/>
		
		            <!-- Place other child views here, such as an ImageView to add an overlay. -->
		
		        </View>
	</Window>
	
    <!-- iOS Window -->
        <NavigationWindow id="nav" platform="ios">
            <Window id="win1" title="Red Window" backgroundColor="red">
                <!-- <Require src="win1content"/>    -->
                <View id="mapview" ns="Ti.Map" onClick="doClick" onComplete="setRegion" onRegionChanged="mapRegionChanged"
		            animate="true" regionFit="true" userLocation="true"
		            mapType="Ti.Map.STANDARD_TYPE" >
		
		            <Annotation id="mountainView"
		              latitude="37.390749" longitude="-122.081651"
		              title="Appcelerator Headquarters" subtitle="Mountain View, CA"
		              pincolor="Titanium.Map.ANNOTATION_RED"
		              leftButton="/images/appcelerator_small.png"
		              myid="1"/>
		
		            <!-- Place other child views here, such as an ImageView to add an overlay. -->
		
		        </View>
            </Window>
        </NavigationWindow>
</Alloy>
