<Alloy>
	<Window class="GeneralWindow" id="voteWindow" 
		title="New Vote" 
		layout="vertical" 
		backgroundColor="white">
		
		<View class="GeneralElement"
			height="100dp">
			<Label
				top="5dp">Find Venue</Label>
			<!-- <TextField id="venueTextField"></TextField>> -->
			<Button title="Pick Venue"
				id="pickVenueButton"
				onClick="pickVenueClicked" platform="ios"></Button>
			<View
				id="pickVenueView"
				platform="android"
				width="Ti.UI.SIZE"
				height="Ti.UI.SIZE"></View>
			<Label id="venueLabel" platform="ios">Not selected</Label>
		</View>
		<View class="DividerElement"></View>
		<View class="GeneralElement"
			height="50dp">
			<View width="Ti.UI.FILL" top="5dp" height="40dp" layout="horizontal">
				<View id="foodView" width="33%">
					<Button 
						backgroundImage="/food-button.png" 
						id="foodButton"
						onClick="foodClicked"
						enabled="false"
						width="80dp"
						height="37dp"></Button>
				</View>
				<View id="drinkView" width="33%">
					<Button
						backgroundImage="/drink-button.png"
						id="drinkButton" 
						onClick="drinkClicked"
						enabled="false"
						width="80dp"
						height="37dp"></Button>
				</View>
				<View id="funView" width="33%">
					<Button
						backgroundImage="/fun-button.png" 
						id="funButton"
						onClick="funClicked"
						enabled="false"
						width="80dp"
						height="37dp"></Button>
				</View>
			</View>
		</View>
		<View class="DividerElement"></View>
		<View class="GeneralElement" height="100dp">
			<Label>Select Thing</Label>
			<Button title="Pick Thing"
				id="pickThingButton"
				enabled="false"
				onClick="pickThingClicked"
				platform="ios"></Button>
			<View
				id="pickThingView"
				platform="android"
				width="Ti.UI.SIZE"
				height="Ti.UI.SIZE"></View>
			<Label id="thingLabel" platform="ios">Not selected</Label>
		</View>
		<!-- <TextField id="thingTextField"></TextField> -->
		<View class="DividerElement"></View>
		<View class="GeneralElement"
			height="50dp">
		<Button
			backgroundImage="/count-it-button.png"
			id="voteButton"
			enabled="false"
			width="276dp"
			height="42dp"
			top="4dp"
			onClick="voteClicked"></Button>
		</View>
	</Window>
</Alloy>