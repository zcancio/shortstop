<Alloy>
	<Window id="voteWindow" title="New Vote" 
		layout="vertical" class="GeneralWindow">
		<ScrollView layout="vertical"  height="100%" width="100%">
			<View layout="vertical">
				<View class="GeneralElement"
					height="40dp">
					<Label>+1 vote</Label>
				</View>
				<View class="DividerElement"></View>
				<View class="GeneralElement"
					height="60dp">
					<Label id="thingLabel">Hackathon</Label>
					<Label id="locationLabel"
						class="boldLabel">Yahoo</Label>
				</View>
				<View class="DividerElement"></View>
				<View class="GeneralElement"
					height="210dp">
					<ImageView id="mainImageView" height="150dp"></ImageView>
					<View layout="horizontal"
							height="60dp">
						<View width="50%">
							<Button 
								backgroundImage="/photo-icon.png"
								onClick="onTakeImageClicked"
								width="60dp"
								height="60dp"
								></Button>
						</View>
						<View width="50%">
							<Button 
								backgroundImage="/image-icon.png"
								onClick="onPickImageClicked"
								width="60dp"
								height="60dp"
								></Button>
						</View>
					</View>
				</View>
				<View class="DividerElement"></View>
				<View class="GeneralElement"
					height="60dp">
					<TextArea id="commentTextArea"
			            borderWidth="1" borderColor="#bbb" borderRadius="5"
			            color="#888" textAlign="left" value=""
			            width="300" height="50dp" top="5dp"/>
		        </View>
		        <View class="DividerElement"></View>
		        <View class="GeneralElement" height="40dp">
					<Button 
						title="Submit"
						onClick="onSubmitClicked"
						top="5dp"
						></Button>
				</View>
				<View class="DividerElement"></View>
				<View class="GeneralElement" 
					layout="horizontal"
					height="50dp">
					<Button 
						id="shareButtons"
						backgroundImage="/final-green-button.png"
						width="276dp"
						height="42dp"
						top="4dp"
						visible="false"
						></Button>
				</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>